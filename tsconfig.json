{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@Layouts/*": ["app/layouts/*"],
      "@Routes/*": ["app/routes/*"],
      "@Assets/*": ["./app/Assets/*"],
      "@Components/*": ["app/components/*"],
      "@Services/*": ["app/services/*"],
      "@Hooks/*": ["app/hooks/*"],
      "@Pages/*": ["app/pages/*"],
      "@Types/*": ["app/types/*"],
      "@Utilities/*": ["app/utilities/*"],
      "@Context/*": ["app/context/*"],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
