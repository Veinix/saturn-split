{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@Layouts/*": ["./app/Layouts/*"],
      "@Routes/*": ["./app/Routes/*"],
      "@Assets/*": ["./app/Assets/*"],
      "@Components/*": ["./app/Components/*"],
      "@Services/*": ["./app/Services/*"],
      "@Hooks/*": ["./app/Hooks/*"],
      "@Pages/*": ["./app/Pages/*"],
      "@Types/*": ["./app/Types/*"],
      "@Utilities/*": ["./app/Utilities/*"],
      "@Context/*": ["./app/Context/*"],
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
